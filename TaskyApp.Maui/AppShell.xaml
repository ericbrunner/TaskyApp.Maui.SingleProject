<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskyApp.Maui.SingleProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TaskyApp.Views">

    <TabBar>
        <ShellContent Title="Tasky"  Icon="icon_about.png" Route="TaskyPage" ContentTemplate="{DataTemplate views:TaskyPage}" />
        <ShellContent Title="Browse" Icon="icon_feed.png" ContentTemplate="{DataTemplate views:ItemsPage}" />
    </TabBar>

    <!--
        If you would like to navigate to this content you can do so by calling
        await Shell.Current.GoToAsync("//LoginPage");
    -->
    <TabBar>
        <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    </TabBar>

</Shell>
