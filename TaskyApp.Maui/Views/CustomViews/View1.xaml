<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskyApp.Maui.SingleProject.Views.CustomViews.View1">
    <Grid RowDefinitions="*,*,*,*" >
        <!--<Label 
            Text="Welcome to .NET MAUI - VIEW 1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />-->

        <CollectionView Grid.Row="0" BackgroundColor="Green">
            <CollectionView.ItemsSource>

                <x:Array Type="{x:Type x:String}">
                    <x:String>CollectionView Element 1</x:String>
                    <x:String>CollectionView Element 2</x:String>
                    <x:String>CollectionView Element 3</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
        </CollectionView>

        <ListView Grid.Row="1" BackgroundColor="Green">
            <ListView.ItemsSource>

                <x:Array Type="{x:Type x:String}">
                    <x:String>Element 1</x:String>
                    <x:String>Element 2</x:String>
                    <x:String>Element 3</x:String>
                </x:Array>
            </ListView.ItemsSource>
        </ListView>

        <BoxView Grid.Row="2" Color="Blue"  />
    </Grid>
</ContentView>
