<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabbedView="clr-namespace:TaskyApp.Maui.SingleProject.CustomControls.TabbedView"
             xmlns:viewModels1="clr-namespace:TaskyApp.Contracts.ViewModels;assembly=TaskyApp.Contracts"
             x:Class="TaskyApp.Maui.SingleProject.Views.CustomTabbedPage"
             x:DataType="viewModels1:ICustomTabbedPageViewModel">

    <Grid RowDefinitions="*,*">
        <tabbedView:TabbedView Grid.Row="0" x:Name="TabbedView"
                               TabItems="{Binding ItemsSource}"
                               TestText="{Binding Title}"
                               BackgroundColor="LightCyan" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding ItemsSource}" BackgroundColor="LightBlue" />
    </Grid>

</ContentPage>